                {{ tjanst.arbetstid }}
              </div>

              <div class="ms-lg-auto">
                <a href="{{ tjanst.url }}" class="neutral-button-secondary">{{ "Läs mer och ansök" | t }}</a>
              </div>

            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

