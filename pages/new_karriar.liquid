{% include 'new_header' %}

<top-element>
  <section class="single-hero default-padding-section position-relative">
    {% for item in lists.hero-bilder-undersidor.rows %}
      {% if item.sid-lank == request.path %}
        <img
          class="hero-full-image position-absolute object-fit-cover top-0 h-100 w-100 z-n1"
          src="{{ item.mobil_bild }}"
          srcset="{{ item.desktop_bild }} 992w"
          loading="lazy"
          alt="{{page.title}}">
        <div class="image-overlay position-absolute top-0 start-0 w-100 h-100 bg-overlay-black-40 z-n1"></div>

        <div class="container z-1">
          <div class="row row-gap-2xl">
            <div class="col-12 col-lg-7 text-white d-flex flex-column row-gap-lg padding-x-lg-2xl single-hero__text">
              {{ item.text }}
            </div>

            <div class="col-12 col-lg-5 d-flex align-items-end justify-content-lg-end">
              <a href="#available-positions" class="brand-button-primary">{{ "Lediga tjänster" | t }}</a>
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </section>
</top-element>


<section class="default-padding-section">
  <div class="container">
    <div class="row align-items-center row-gap-4xl">
      {{ 'callout-text' | page_editable: class: 'col-12 col-lg-6 d-flex flex-column row-gap-lg padding-right-lg-2xl' }}
      {{ 'callout-image' | page_editable: class: 'col-12 col-lg-6' }}
    </div>
  </div>
</section>

<section class="default-padding-section bg-secondary">
  <div class="container">
    <div class="row row-gap-2xl">
      {{ 'callout-rounded-image' | page_editable: class: 'col-12 col-lg-4 testimonial__rounded-image' }}
      {{ 'callout-rounded-text' | page_editable: class: 'col-12 col-lg-6 d-flex flex-column padding-left-lg-2xl' }}
    </div>
  </div>
</section>

<section class="default-padding-section" id="available-positions">
  <div class="container">
    <div class="row row-gap-4xl">
      {{ 'available-positions-text' | page_editable: class: 'col-12 col-lg-6 d-flex flex-column row-gap-lg' }}

      <div class="col-12 col-lg-6 d-flex flex-column row-gap-xl">
        {% for tjanst in lists.lediga-tjanster.rows %}
          <div class="gray-card bg-secondary d-flex flex-column row-gap-lg radius-md padding-y-2xl padding-x-xl padding-y-lg-3xl padding-x-lg-2xl">
            <div class="gray-card__content d-flex flex-column row-gap-sm">
              <p class="display-xs fw-bold">{{ tjanst.tjanst }}</p>
              <p class="text-secondary">{{ tjanst.kort_beskrivning }}</p>
            </div>

            <div class="d-flex gap-base align-items-center flex-wrap">
              <div class="d-flex gap-xs">
